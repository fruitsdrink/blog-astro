---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<iframe
  src={url}
  width="640"
  height="360"
  style="height: auto; width: 100%; aspect-ratio: 640 / 360;"
  allow="autoplay; fullscreen; encrypted-media; picture-in-picture"
  allowfullscreen
  frameborder="0"
  class="w-full aspect-video mb-4"></iframe>
