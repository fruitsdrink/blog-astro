---
import { BaseLayout } from "@/layouts";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { HtmlPreview, CodeView, Prose } from "@/components";

import fs from "fs";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  return posts.map((post) => {
    const htmlFileName = `src/content/posts/${post.id}/_src/index.html`;
    const cssFileName = `src/content/posts/${post.id}/_src/index.css`;
    const jsFileName = `src/content/posts/${post.id}/_src/index.js`;

    let htmlContent = "";
    let cssContent = "";
    let jsContent = "";

    if (fs.existsSync(htmlFileName)) {
      htmlContent = fs.readFileSync(htmlFileName, "utf-8");
    }
    if (fs.existsSync(cssFileName)) {
      cssContent = fs.readFileSync(cssFileName, "utf-8");
    }
    if (fs.existsSync(jsFileName)) {
      jsContent = fs.readFileSync(jsFileName, "utf-8");
    }
    return {
      params: {
        slug: post.id,
      },
      props: {
        post,
        html: htmlContent,
        css: cssContent,
        js: jsContent,
      },
    };
  });
}

type Props = CollectionEntry<"posts"> & {
  html: string;
  css: string;
  js: string;
  post: CollectionEntry<"posts">;
};

const {post, html, css, js} = Astro.props;
const { Content } = await render(post);;
---

<BaseLayout>
  <section class="max-w-[768px] mx-auto p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold mb-6 text-center">{post.data.title}</h1>
      <p class="text-sm text-gray-500 mt-4">
        {post.data.date.toLocaleDateString()}
      </p>
    </div>
    {
      post.data.cover?.image && !post.data.cover?.hiddenInSingle && (
        <Image
          class="rounded-md mb-6"
          width={720}
          height={360}
          src={post.data.cover.image}
          alt={post.data.title}
        />
      )
    }

    {
      post.data.preview?.enabled && (
        <HtmlPreview
          postId={post.id}
          showNewWindowPreview={true}
          height={post.data.preview?.height}
        />
      )
    }

    <div class="mt-6">
      <Prose>
        <Content />
      </Prose>
      <CodeView html={html} css={css} js={js} bilibili={post.data.bilibili} youtube={post.data.youtube} jsFiddle={post.data.jsFiddle} />
      
    </div>
  </section>
</BaseLayout>
